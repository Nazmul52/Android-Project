<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nazmulhuda.chat_app.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Sign In"
        android:textColor="#B32B6E"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/textView" />
    <ImageView
        android:id="@+id/circleImageView"
        android:layout_width="90sp"
        android:layout_height="70sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:src="@drawable/user" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="40sp"
        android:layout_below="@+id/circleImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@drawable/rounded_button"
        android:paddingLeft="10sp"
        android:hint="Email"
        android:id="@+id/email" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="40sp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="22dp"
        android:background="@drawable/rounded_button"
        android:hint="Password"
        android:paddingLeft="10sp"
        android:inputType="textPassword"
        android:id="@+id/password" />

    <TextView
        android:layout_width="200dp"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit"
        android:id="@+id/error"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:textColor="#D61010" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="14dp"
        android:textColor="#920F7B"
        android:textStyle="bold"
        android:text="fotgot password ?"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/circleImageView"
        android:layout_alignRight="@+id/circleImageView"
        android:layout_below="@+id/textView2"
        android:textColor="#D6EEED"
        android:layout_marginTop="31dp"
        android:background="@drawable/rounded_button1"
        android:text="Submit"
        android:id="@+id/submit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/submit"
        android:layout_alignStart="@+id/submit"
        android:layout_below="@+id/submit"
        android:text="create account ?"
        android:textColor="#B60667"
        android:textSize="10sp"
        android:layout_marginLeft="4sp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:text="Sign Up"
        android:textSize="10sp"
        android:layout_marginLeft="4sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#6A045F" />

</RelativeLayout>
